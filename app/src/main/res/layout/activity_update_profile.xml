<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#320d3e"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".update_profile">

    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/circular_bag"
        android:backgroundTint="@color/my_primary"
        android:scaleType="centerCrop"
        android:src="@drawable/person_icon" />

    <EditText
        android:id="@+id/profile_expertise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/edit_back"
        android:elevation="5dp"
        android:enabled="true"
        android:hint="Expert In "
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/updatehrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:inputType="numberDecimal"
        android:enabled="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint=" Enter hourly rate ($)"
        android:padding="10dp" />

    <Button
        android:id="@+id/button_change_pictureB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/edit_back"
        android:text="Upload "
        android:textColor="@color/black"
        app:backgroundTint="#ab8ad1" />

    <Button
        android:id="@+id/profle_update_btn_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/edit_back"
        android:text="Update profile"
        android:textColor="@color/black"
        app:backgroundTint="#ab8ad1" />

    <!-- New Forgot Password Button -->
    <Button
        android:id="@+id/button_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/edit_back"
        android:text="Forgot Password"
        android:textColor="@color/black"
        app:backgroundTint="#ab8ad1" />

    <EditText
        android:id="@+id/coins_view"
        android:layout_width="150dp"
        android:layout_height="59dp"
        android:layout_margin="20dp"
        android:background="@drawable/edit_back"
        android:elevation="5dp"
        android:enabled="true"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        app:backgroundTint="#ab8ad1" />

</LinearLayout>
